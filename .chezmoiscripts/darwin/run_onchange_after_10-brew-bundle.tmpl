{{- if joinPath .chezmoi.homeDir ".Brewfile" | stat -}}
#!/bin/sh
set -eux

{{- 	$brewPath := eq .chezmoi.arch "arm64" | ternary "/opt/homebrew" "/usr/local"}}
{{- 	$brew := joinPath $brewPath "bin/brew"}}
command -v brew >/dev/null || eval "$({{$brew}} shellenv)"

# {{include "dot_Brewfile" | cat (now | date "02 January 2006") | sha256sum}}
HOMEBREW_NO_ENV_HINTS=1 {{$brew}} bundle --no-lock --quiet --global

mas upgrade
{{- end}}
