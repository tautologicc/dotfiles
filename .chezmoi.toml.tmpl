{{- $name := promptStringOnce .my "name" "name" -}}
{{- $email := promptStringOnce .my "email" "email" -}}
{{- $username := promptStringOnce .my "username" "username" -}}
{{- $hostname := promptStringOnce .my "hostname" "hostname" -}}   

umask = 0o22

[data]

[data.my]
    email = {{ $email | quote }}
    hostname = {{ $hostname | quote }}
    name = {{ $name | quote }}
    username = {{ $username | quote }}

[git]
    autoCommit = true
    autoPush = true

[hooks.read-source-state.pre]
    command = {{ joinPath .chezmoi.sourceDir ".install-bw" | quote }}
